{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"],
      "sections/*": ["sections/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "icons/*": ["icons/*"],
      "images/*": ["images/*"],
      "shared/*": ["shared/*"],
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "pdf/*": ["pdf/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
